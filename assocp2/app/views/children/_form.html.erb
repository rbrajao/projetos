<%= form_with(model: child) do |form| %>
  <% if child.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(child.errors.count, "error") %> prohibited this child from being saved:</h2>

      <ul>
        <% child.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :sex, style: "display: block" %>
    <%= select("child", "sex", 
        options_for_select([["Masculino","M"], ["Feminino", "F"]], @child.sex), {include_blank: "Selecione"}) 
    %>
  </div>

  <div>
    <%= form.label :father_id, style: "display: block" %>
    <%= form.collection_select(:father_id, @father, :id, :name, prompt: true) %>
  </div>
  <br/>
  <div>
    <%= form.submit %>
  </div>
<% end %>
